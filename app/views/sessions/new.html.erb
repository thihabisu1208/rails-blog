<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="max-w-md w-full space-y-8 p-8">
    <h2 class="text-center text-3xl font-bold">DevLog Admin</h2>

    <%= form_with url: sessions_path, local: true, class: "mt-8 space-y-6" do |form| %>
      <!-- Email field -->
      <div class="mb-4">
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500", placeholder: "your@email.com", required: true %>
      </div>

      <!-- Password field -->
      <div class="mb-6">
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500", placeholder: "••••••••", required: true %>
      </div>

      <!-- Submit button -->
      <%= form.submit "Sign In", class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
    <% end %>
  </div>
</div>
